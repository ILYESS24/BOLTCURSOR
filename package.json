{
  "name": "ai-assistant",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "build:render": "cross-env NODE_ENV=production remix vite:build",
    "dev": "remix vite:dev --port 3000",
    "start": "cross-env PORT=${PORT:-8080} remix-serve ./build/server/index.js",
    "start:render": "cross-env PORT=${PORT:-10000} remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "deploy": "wrangler pages deploy build/client",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:comprehensive": "playwright test tests/comprehensive-simulation.test.js",
    "load-test:artillery": "artillery run artillery-load-test.yml",
    "load-test:k6": "k6 run k6-load-test.js",
    "simulation:full": "npm run test:comprehensive && npm run load-test:artillery",
    "simulation:stress": "npm run load-test:k6",
    "simulation:all": "npm run simulation:full && npm run simulation:stress"
  },
